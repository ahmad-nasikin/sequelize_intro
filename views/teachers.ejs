<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Teachers</title>
  </head>
  <body>
    <center><h1>List Teachers</h1></center>
    <div>
      <center>
      <table border="1">
        <tr>
          <th>Id</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Action</th>
        </tr>
        <% data.forEach(d => { %>
        <tr>
        <td><%=d.id%></td>
        <td><%=d.first_name%></td>
        <td><%=d.last_name%></td>
        <td><%=d.email%></td>
        <td><a href="/teachers/update/<%= d.id %>"><button type="button" name="button">Edit</button></a></td>
        <td><a href="teachers/delete/<%= d.id %>"><button type="button" name="button">Delete</button></a></td>
      </tr>
      <% }) %>
      </table>
      <a href="/teachers/addteacher"><button type="button" name="button">Add Teacher</button></a>
    </center>
    </div>
  </body>
</html>
